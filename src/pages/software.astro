---
import Layout from '../layouts/Layout.astro';
import softwareData from '../content/software/software.json';
import SoftwareCard from '../components/SoftwareCard';
---

<Layout title="Software">
  <div class="container py-6 md:py-12">
    <div class="mx-auto max-w-[980px]">
      <h1 class="mb-4 text-3xl font-bold leading-tight tracking-tighter md:text-6xl lg:leading-[1.1]">
        Software & Tools
      </h1>
      <p class="max-w-[750px] text-lg text-muted-foreground sm:text-xl">
        Open-source tools and databases developed by the Saez Lab
      </p>
    </div>

    <div class="mx-auto max-w-[980px] py-6 md:py-12">
      <h2 class="mb-8 text-2xl font-bold">Featured</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {softwareData.filter(item => item.categories.featured).map((item) => (
          <SoftwareCard
            client:load
            name={item.name}
            short_description={item.short_description}
            long_description={item.long_description}
            code_repository={item.code_repository}
            website={item.website}
            publication={item.publication}
            image={item.image}
            categories={item.categories}
          />
        ))}
      </div>
    </div>

    <div class="mx-auto max-w-[980px] py-6 md:py-12">
      <h2 class="mb-8 text-2xl font-bold">All Tools</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {softwareData.filter(item => item.categories.tool).map((item) => (
          <SoftwareCard
            client:load
            name={item.name}
            short_description={item.short_description}
            long_description={item.long_description}
            code_repository={item.code_repository}
            website={item.website}
            publication={item.publication}
            image={item.image}
            categories={item.categories}
          />
        ))}
      </div>
    </div>

    <div class="mx-auto max-w-[980px] py-6 md:py-12">
      <h2 class="mb-8 text-2xl font-bold">All Databases</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {softwareData.filter(item => item.categories.database).map((item) => (
          <SoftwareCard
            client:load
            name={item.name}
            short_description={item.short_description}
            long_description={item.long_description}
            code_repository={item.code_repository}
            website={item.website}
            publication={item.publication}
            image={item.image}
            categories={item.categories}
          />
        ))}
      </div>
    </div>
  </div>
</Layout> 