---
import Layout from '../layouts/Layout.astro';
import Map from '../components/Map';

const location = { latitude: 49.41297, longitude: 8.67068 };
const markerMarkup = "We are on the 10th floor<br>of the Marsilius-Arkaden<br>West tower (INF130.3).<br>";
---

<Layout title="Contact">
    <div class="mx-auto max-w-[980px] py-6 md:py-12">
      <h2 class="mb-6 text-2xl font-bold">Find Us</h2>
      <div class="w-full overflow-hidden rounded-lg">
        <Map client:only="react" {location} zoom={17} {markerMarkup} />
      </div>
    </div>

    <div class="mx-auto max-w-[980px] py-6 md:py-12">
      <div class="grid gap-8 md:grid-cols-2">
        <div>
          <h2 class="mb-6 text-2xl font-bold">Contact Information</h2>
          <div class="space-y-4">
            <div>
              <h3 class="font-semibold">General Contact</h3>
              <p>saezlab&#64;ebi.ac.uk</p>
            </div>
            <div>
              <p class="text-muted-foreground">You can find the email of lab members in the Team section.</p>
            </div>
          </div>
        </div>

        <div>
          <h2 class="mb-6 text-2xl font-bold">Locations</h2>
          <div class="space-y-6">
            <div>
              <h3 class="font-semibold">European Bioinformatics Institute (EMBL-EBI)</h3>
              <p>Wellcome Genome Campus</p>
              <p>CB10 1SD Hinxton, Cambridgeshire, UK</p>
              <a href="https://www.google.com/maps/dir//EMBL's+European+Bioinformatics+Institute+(EMBL-EBI),+Campus,+EMBL-EBI+Main+Building,+Wellcome+Genome,+Hinxton,+United+Kingdom/" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">Google Maps →</a>
            </div>
            <div>
              <h3 class="font-semibold">Institute for Computational Biomedicine</h3>
              <p>Im Neuenheimer Feld 130.3, 69120 Heidelberg</p>
              <p>10th floor (Marsiliusarkaden), AG Saez-Rodriguez</p>
              <p>Tel: +49 6221 56 7521</p>
              <a href="https://www.google.com/maps/dir//Marsilius-Arkaden,+Im+Neuenheimer+Feld+130,+Heidelberg,+Germany/" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">Google Maps →</a>
            </div>
          </div>
        </div>
      </div>
    </div>
</Layout> 