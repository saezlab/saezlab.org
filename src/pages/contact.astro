---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
    <div class="mx-auto max-w-[980px] py-6 md:py-12">
      <h2 class="mb-6 text-2xl font-bold">Find Us</h2>
      <div class="aspect-video w-full overflow-hidden rounded-lg">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d162.23684421613967!2d8.670751139034243!3d49.41288618943688!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4797c12ec3026749%3A0x4536c5528bf53a97!2sBetriebs%C3%A4rztlicher%20Dienst%20des%20Universit%C3%A4tsklinikums%20Heidelberg!5e0!3m2!1sde!2sde!4v1744628032901!5m2!1sde!2sde"           width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>

    <div class="mx-auto max-w-[980px] py-6 md:py-12">
      <div class="grid gap-8 md:grid-cols-2">
        <div>
          <h2 class="mb-6 text-2xl font-bold">Contact Information</h2>
          <div class="space-y-4">
            <div>
              <h3 class="font-semibold">General Contact</h3>
              <p>admin.saez&#64;uni-heidelberg.de</p>
            </div>
            <div>
              <h3 class="font-semibold">Jobs/Internships</h3>
              <p>jobs.saez&#64;uni-heidelberg.de</p>
            </div>
            <div>
              <p class="text-muted-foreground">You can find the email of lab members in the Team section.</p>
            </div>
          </div>
        </div>

        <div>
          <h2 class="mb-6 text-2xl font-bold">Locations</h2>
          <div class="space-y-6">
            <div>
              <h3 class="font-semibold">European Bioinformatics Institute (EMBL-EBI)</h3>
              <p>Wellcome Genome Campus</p>
              <p>CB10 1SD Hinxton, Cambridgeshire, UK</p>
            </div>
            <div>
              <h3 class="font-semibold">Institute for Computational Biomedicine</h3>
              <p>Im Neuenheimer Feld 130.3, 69120 Heidelberg</p>
              <p>10th floor (Marsiliusarkaden), AG Saez-Rodriguez</p>
              <p>Tel: +49 6221 56 7521</p>
            </div>
          </div>
        </div>
      </div>
    </div>
</Layout> 