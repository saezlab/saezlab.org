---
// Component Imports
import Prose from '../components/Prose.astro';
import ResearchContent from '../content/home_page/research.mdx';
import MissionContent from '../content/home_page/mission.mdx';
import LocationsContent from '../content/home_page/locations.mdx';
import Layout from '../layouts/Layout.astro';
import { getInternalLink } from '../lib/utils';
import { Card, CardContent, CardHeader, CardTitle } from '../components/ui/card';
// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<Layout title="Home">
	<div class="flex-1">
		<section class="py-4 lg:py-12">
			<div class="mx-auto flex flex-col items-center max-w-6xl">
				<img src={getInternalLink('/banner.svg')} alt="Saez-Rodriguez Group Banner" class="w-full" />
			</div>
		</section>

		<section class="container py-4">
			<div class="mx-auto flex max-w-[58rem] flex-col md:flex-row items-center gap-8">
				<Card className="flex-1">
					<CardContent className="flex flex-col md:flex-row items-center gap-8 p-6">
						<div class="flex-1">
							<div class="dark:bg-white p-4 rounded-lg">
								<img src={getInternalLink('/logo.png')} alt="Saez-Rodriguez Group Logo" class="h-64 w-auto mx-auto" />
							</div>
						</div>
						<div class="flex-1 space-y-4">
							<CardHeader>
								<CardTitle className="text-2xl leading-[1.1] sm:text-2xl md:text-4xl text-center">
									Our Mission
								</CardTitle>
							</CardHeader>
							<div class="leading-normal text-muted-foreground sm:text-base sm:leading-6">
								<Prose>
									<MissionContent />
								</Prose>
							</div>
						</div>
					</CardContent>
				</Card>
			</div>
		</section>

		<section class="container py-4">
			<Card className="mx-auto max-w-[58rem]">
				<CardContent>
					<CardHeader>
						<CardTitle className="text-2xl leading-[1.1] sm:text-2xl md:text-4xl text-center mb-4">
							Research
						</CardTitle>
					</CardHeader>
					<div class="leading-normal text-muted-foreground sm:text-lg sm:leading-7">
						<Prose>
							<ResearchContent />
						</Prose>
					</div>
				</CardContent>
			</Card>
		</section>

		<section class="container py-4">
			<Card className="mx-auto max-w-[58rem]">
				<CardContent>
					<CardHeader>
						<CardTitle className="text-2xl leading-[1.1] sm:text-2xl md:text-4xl text-center mb-4">
							Our Locations
						</CardTitle>
					</CardHeader>
					<div class="leading-normal text-muted-foreground sm:text-base sm:leading-6">
						<Prose>
							<LocationsContent />
						</Prose>
					</div>
				</CardContent>
			</Card>
		</section>


	</div>
</Layout>
